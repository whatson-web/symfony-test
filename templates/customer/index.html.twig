{% extends 'base.html.twig' %}

{% block title %}Customer index{% endblock %}

{% block body %}
    {% include 'menu.html.twig' %}
    <h1>Customer index</h1>

    <table class="table">
        <thead>
            <tr class="alert alert-primary">
                <th>FirstName</th>
                <th>LastName</th>
                <th>BirthDate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>

                <td>{{ customer.firstName }}</td>
                <td>{{ customer.lastName }}</td>
                <td>{{ customer.birthDate ? customer.birthDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('customer_show', {'id': customer.id}) }}">show</a>
                    <a class="btn btn-success" href="{{ path('customer_edit', {'id': customer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="alert alert-danger text-center">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="col-md-4 mx-auto">
        <a class="btn btn-lg btn-success btn-block" href="{{ path('customer_new') }}">Create new</a>
    </div>
{% endblock %}
