{% extends 'layout.html.twig' %}

{% block title %}Index clients{% endblock %}

{% block main %}
    <section class="w-50 m-auto">
        <h1>Index clients</h1>
        <div class="my-3">
            <a class="btn btn-primary" href="{{ path('appointment_index') }}">Voir les rendez-vous</a>
            <a class="btn btn-primary" href="{{ path('place_index') }}">Voir les lieux</a>        
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>date d'anniversaire</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for customer in customers %}
                <tr>
                    <td>{{ customer.id }}</td>
                    <td>{{ customer.firstName }}</td>
                    <td>{{ customer.lastName }}</td>
                    <td>{{ customer.birthDate ? customer.birthDate|date('d-m-Y') : '' }}</td>
                    <td>
                        <a class="btn btn-info" href="{{ path('customer_show', {'id': customer.id}) }}">Voir</a>
                        <a class="btn btn-info" href="{{ path('customer_edit', {'id': customer.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucun client trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('customer_new') }}">Nouveau client</a>
    </section>
{% endblock %}
