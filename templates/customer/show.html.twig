{% extends 'base.html.twig' %}

{% block title %}{{customer.firstName}} {{ customer.lastName }}{% endblock %}

{% block body %}
    <a href="{{ path('customer_index') }}"><span class="iconify" data-icon="bx:bx-arrow-back" data-inline="false"></span> Go back</a>
    <h1><b><span class="whatson-web-span">Customer</span></b></h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>First Name</th>
                <td>{{ customer.firstName }}</td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>{{ customer.lastName }}</td>
            </tr>
            <tr>
                <th>Birth Date</th>
                <td>{{ customer.birthDate ? customer.birthDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('customer_edit', {'id': customer.id}) }}"><span class="iconify" data-icon="fa:edit"></span> Edit</a>

    {{ include('customer/_delete_form.html.twig') }}
{% endblock %}
