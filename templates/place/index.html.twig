{% extends 'base.html.twig' %}

{% block title %}Index des lieux{% endblock %}

{% block body %}
    <h1>Index des lieux</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Addresse</th>
                <th>Code postal</th>
                <th>Ville</th>
            </tr>
        </thead>
        <tbody>
        {% for place in places %}
            <tr>
                <td>{{ place.name }}</td>
                <td>{{ place.address }}</td>
                <td>{{ place.zipcode }}</td>
                <td>{{ place.city }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
        {{ form_start(leplaceform) }}
        {{ form_widget(leplaceform) }}

        <button type="submit">Confirmer le fichier</button>

        {{ form_end(leplaceform) }}
        
        <div class="RetourAuMenu">
            <a href="/">Retour au menu</a>
        </div>
{% endblock %}
